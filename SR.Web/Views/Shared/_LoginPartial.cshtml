@Styles.Render("~/Content/RegisterDropDown.css")

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <div class="dropdownRegisterButton">
                <button class="dropbtnRegisterButton" onclick="showDropdown()">
                    Register
                </button>
                <div class="dropdown-contentRegisterButton" id="myDropdown">
                    @Html.ActionLink("As customer", "RegisterCustomer", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                    @Html.ActionLink("As company agent", "RegisterCompanyAgent", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                </div>
            </div>
        </li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

@Scripts.Render("~/scripts/RegisterDropDown.js")

